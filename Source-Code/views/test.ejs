<!-- Layout to be used on every page of the blog website -->
<!-- Reduce code redundancy -->

<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <!-- Use EJS tags to trucnate visible text to only a 100 characters -->

    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>


    <% }) %>
